<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/bg4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape2"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Choose any of the following :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffbb99"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bAdd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Add Warrior"
            android:textColor="#F6FE07"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bDisplay"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Display Warriors"
            android:textColor="#F6FE07"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bModify"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Modify Warriors"
            android:textColor="#F6FE07"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Delete Warriors"
            android:textColor="#F6FE07"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bCom"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="V/S"
            android:textColor="#F6FE07"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bCall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Call Fellow Warrior"
            android:textColor="#F6FE07"
            android:textSize="25dp" />

             <Button
            android:id="@+id/bgame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="DeathBattle!"
            android:textColor="#F6FE07"
            android:textSize="25dp" />
        <Button
            android:id="@+id/bwhatsapp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Share WarriorDetails On Whatsapp"
            android:textColor="#F6FE07"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bfb"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-medium"
            android:text="Share AppExperience On Whatsapp"
            android:textColor="#F6FE07"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>